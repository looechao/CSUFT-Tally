<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/main_top_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/main_btn_more"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/more"
            android:background="@color/white"
            android:onClick="onButtonClick"
            android:layout_alignParentLeft="true"
            android:padding="10dp"/>
        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/main_btn_more"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/green"/>
        <ImageView
            android:id="@+id/main_iv_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/search"
            android:onClick="onClick"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/main_tv_temp"
            android:text="当前用户:"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/main_btn_more"
            android:gravity="left"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/main_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="InvalidId"
        android:layout_below="@+id/main_top_layout"
        android:padding="10dp"
        android:divider="@null"
        android:dividerHeight="6dp"
        android:background="@color/white"/>
    <ImageButton
        android:id="@+id/main_btn_rcd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_write"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:onClick="onClick"
        android:background="@drawable/main_btn_more"/>

</RelativeLayout>